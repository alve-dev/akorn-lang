//Hacer un programa que de el factorial de un numero version iterativa

loop
{
    var int number = readInt("Digita un numero positivo: ");
    while number < 0
    {
        number = readInt("Digita un numero positivo no negativo: ");
    }

    if (number == 0) or (number == 1)
    {
        writeline("n! = 1");
        break;
    }

    var int i = 2, product = 1;
    while i <= number
    {
        product *= i;
        i += 1;
    }
    
    writeline("n! =", product);
    break;
}
